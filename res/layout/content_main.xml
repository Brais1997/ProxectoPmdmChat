<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.balva.proyecto3.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat" />


    <EditText
        android:id="@+id/intronombre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Introduce tu nombre"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/chat"
        android:layout_toEndOf="@+id/chat"
        android:layout_marginBottom="51dp" />

    <CheckBox
        android:text="Privado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privadocheck"


        android:layout_alignBaseline="@+id/mes"
        android:layout_alignBottom="@+id/mes"
        android:layout_toRightOf="@+id/mes"
        android:layout_toEndOf="@+id/mes"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <EditText
        android:id="@+id/mes"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hitorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0.08"
        android:layout_below="@+id/mes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/mostrar"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.41"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />


</RelativeLayout>
